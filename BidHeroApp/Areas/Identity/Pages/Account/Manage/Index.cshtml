@page
@using BidHeroApp.Models.Enums;
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<form id="profile-form" method="post">
    <div class="row">
        <div class="col-md-12">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-floating mb-3">
                <input asp-for="Input.GivenName" class="form-control" placeholder="Please enter your given name." />
                <label asp-for="Input.GivenName" class="form-label"></label>
                <span asp-validation-for="Input.GivenName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-floating mb-3">
                <input asp-for="Input.FamilyName" class="form-control" placeholder="Please enter your family name." />
                <label asp-for="Input.FamilyName" class="form-label"></label>
                <span asp-validation-for="Input.FamilyName" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-floating mb-3">
                <input asp-for="Input.BirthDate" class="form-control" placeholder="Please enter you birth date." />
                <label asp-for="Input.BirthDate" class="form-label"></label>
                <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-floating mb-3">
                @foreach (Gender gender in System.Enum.GetValues(typeof(Gender)))
                {
                    <div class="form-check form-check-inline">
                        <input asp-for="Input.Gender" class="form-check-input" type="radio" value="@((int)gender)">
                        <label class="form-check-label" asp-for="Input.Gender">@gender.ToString()</label>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
